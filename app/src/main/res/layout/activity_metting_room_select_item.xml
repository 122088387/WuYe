<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/list_view_line"
                android:paddingBottom="@dimen/d4"
                android:paddingLeft="@dimen/d8"
                android:paddingRight="@dimen/d8"
                android:paddingTop="@dimen/d4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_layout_white_up"
            android:orientation="vertical"
            android:padding="@dimen/d8">

            <RelativeLayout
                android:id="@+id/rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <ImageView
                    android:id="@+id/blue_point"
                    android:layout_width="@dimen/d8"
                    android:layout_height="@dimen/d8"
                    android:layout_centerVertical="true"
                    android:src="@drawable/blue_point"/>

                <TextView
                    android:id="@+id/tv_select_person_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/d4"
                    android:layout_toRightOf="@id/blue_point"
                    android:text="姓名：张立云"
                    android:textColor="@color/black"
                    />

            </RelativeLayout>

            <TextView
                android:id="@+id/tv_select_room_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/rl"
                android:layout_marginLeft="@dimen/d12"
                android:paddingTop="@dimen/d4"
                android:text="单位：金源商务大厦物业部"
                android:textColor="@color/black"
                />
        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_layout_blue"
            android:padding="@dimen/d8">

            <TextView
                android:id="@+id/tv_order_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/d12"
                android:text="8:00-10:00"
                android:textColor="@color/colorPrimary"
                android:textSize="15sp"
                />

            <ImageView
                android:id="@+id/iv_select_phone"
                android:layout_width="@dimen/d20"
                android:layout_height="@dimen/d20"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/telephone"
                />

        </RelativeLayout>

    </LinearLayout>


    <TextView
        android:id="@+id/tv_cancel_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="50dp"
        android:background="@color/include_title"
        android:padding="3dp"
        android:text="取消预订"
        android:textColor="@android:color/white"
        android:visibility="gone"/>

</RelativeLayout>
