<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/e8e8e8"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/d6"
        android:layout_marginBottom="@dimen/d4"
        android:background="@color/colorBack"
        android:foreground="?android:attr/selectableItemBackground"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:background="@color/tijiao_title"
            android:layout_height="@dimen/itemLineSize"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="@dimen/d10">

            <com.github.siyamed.shapeimageview.CircularImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/item_order_list_iv"
                android:layout_width="@dimen/d35"
                android:layout_height="@dimen/d35"
                android:scaleType="centerCrop"
                android:src="@drawable/default_png"
                app:siBorderColor="@color/colorBack"
                app:siBorderType="stroke"
                app:siBorderWidth="0.5dp" />

            <TextView
                android:id="@+id/item_order_list_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/d14"
                android:layout_toRightOf="@id/item_order_list_iv"
                android:textColor="@color/black1"
                android:textSize="@dimen/TextSize_4"
                tools:text="林家面道（联盟路店）" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/item_order_list_name"
                android:src="@drawable/ic_arrows_right" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/gray_line"
            android:background="@color/white"
            android:padding="@dimen/d10">

            <TextView
                android:id="@+id/item_order_list_goods"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="标准白吉馍等3件商品"
                android:textColor="@color/black2"
                android:textSize="@dimen/TextSize_5" />

            <TextView
                android:id="@+id/item_order_list_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textColor="@color/black2"
                tools:text="￥16" />

            <TextView
                android:id="@+id/item_order_list_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/item_order_list_goods"
                android:layout_marginTop="@dimen/d2"
                android:textColor="@color/gray"
                tools:text="2016/08/27 11:26" />

            <TextView
                android:id="@+id/item_order_list_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/item_order_list_time"
                android:layout_alignParentRight="true"
                android:textColor="@color/gray"
                tools:text="已完成" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_double_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/gray_line"
            android:background="@color/white"
            android:divider="@drawable/linearlayout_divider_gray1"
            android:showDividers="middle">

            <TextView
                android:id="@+id/item_order_list_left"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/d10"
                android:text=""
                android:textColor="@color/black2"
                android:textSize="@dimen/TextSize_5" />

            <TextView
                android:id="@+id/item_order_list_right"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/d10"
                android:text=""
                android:textColor="@color/black2"
                android:textSize="@dimen/TextSize_5" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:background="@color/tijiao_title"
            android:layout_height="@dimen/itemLineSize"/>

    </LinearLayout>

</RelativeLayout>