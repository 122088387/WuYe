<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/White"
                android:padding="@dimen/d8">

    <ImageView
        android:id="@+id/person_list_iv"
        android:layout_width="@dimen/d56"
        android:layout_height="@dimen/d56"
        android:layout_centerVertical="true"
        android:src="@drawable/person_touxiang"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/d12"
        android:layout_toRightOf="@id/person_list_iv"
        android:orientation="vertical">

        <TextView
            android:id="@+id/person_list_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="王宝强"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/person_list_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/d8"
            android:text="客户经理"
            android:textColor="@android:color/darker_gray"/>
    </LinearLayout>
</RelativeLayout>
