<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
    >

    <TextView
        android:id="@+id/tv_show_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:ems="5"
        android:text="录音"
        android:textColor="@color/tijiao_title"/>

    <TextView
        android:id="@+id/text_no_voice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/d12"
        android:layout_toRightOf="@id/tv_show_title"
        android:padding="@dimen/d10"
        android:text=""
        android:textColor="@color/black"/>

    <ImageView
        android:id="@+id/iv_show_voice"
        android:layout_width="@dimen/d24"
        android:layout_height="@dimen/d24"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/d10"
        android:src="@drawable/audio_green_3"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/itemLineSize"
        android:layout_below="@id/tv_show_title"
        android:background="@color/list_view_line"/>
</RelativeLayout>
