<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center">


    <ImageView
        android:id="@+id/shopping_substract"
        android:layout_width="@dimen/d25"
        android:layout_height="@dimen/d25"
        android:padding="@dimen/d2"
        android:src="@drawable/shopping_substract" />

    <TextView
        android:id="@+id/shopping_substract_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/d2"
        android:layout_marginRight="@dimen/d2"
        android:ems="1"
        android:gravity="center_horizontal"
        android:text="88"
        android:textColor="#111111"
        android:textSize="@dimen/TextSize_4" />

    <ImageView
        android:id="@+id/shopping_add"
        android:layout_width="@dimen/d25"
        android:layout_height="@dimen/d25"
        android:padding="@dimen/d2"
        android:src="@drawable/shopping_add_pre" />


</LinearLayout>
