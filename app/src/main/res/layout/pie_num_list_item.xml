<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <View
        android:id="@+id/pie_gray_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d15"
        android:visibility="gone"
        android:background="@color/background" />
    <View
        android:id="@+id/pie_gray_line2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/itemLineSize"
        android:visibility="gone"
        android:layout_marginLeft="@dimen/d10"
        android:background="@color/background" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/pie_num_list_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/d10"
            android:text="完成数量"
            android:textColor="@color/black1"
            android:textSize="@dimen/TextSize_4" />

        <TextView
            android:id="@+id/pie_num_list_item_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="@dimen/d10"
            android:text="1"
            android:textColor="@color/vice_title"
            android:textSize="@dimen/TextSize_4" />
    </RelativeLayout>

</LinearLayout>