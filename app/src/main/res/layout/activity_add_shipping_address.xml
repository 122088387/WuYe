<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_e8e8e8"
    android:orientation="vertical">


    <include layout="@layout/include_title_bar" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/d10"
        android:text="联系人"
        android:textSize="@dimen/TextSize_13" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/White">

        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/d10"
            android:paddingLeft="@dimen/d10"
            android:paddingTop="@dimen/d10"
            android:text="姓名："
            android:textColor="@color/black1"
            android:textSize="@dimen/TextSize_15" />

        <EditText
            android:id="@+id/et_add_shipping_address_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/text1"
            android:layout_marginLeft="@dimen/d10"
            android:layout_toRightOf="@id/text1"
            android:background="@null"
            android:hint="请填写收货人姓名"
            android:paddingBottom="@dimen/d10"
            android:paddingTop="@dimen/d10"
            android:singleLine="true"
            android:textColor="@color/black1"
            android:textColorHint="@color/color_999999"
            android:textSize="@dimen/TextSize_15" />


        <View
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/gray_line"
            android:layout_alignLeft="@id/text1"
            android:layout_below="@id/et_add_shipping_address_name"
            android:background="@color/list_view_line" />

        <RelativeLayout
            android:id="@+id/rl_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/et_add_shipping_address_name"
            android:layout_below="@id/line1"
            android:paddingBottom="@dimen/d10"
            android:paddingTop="@dimen/d10">

            <ImageView
                android:id="@+id/add_address_man"
                android:layout_width="@dimen/d25"
                android:layout_height="@dimen/d25"
                android:padding="@dimen/d2"
                android:src="@drawable/select" />

            <TextView
                android:id="@+id/text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/d4"
                android:layout_toRightOf="@id/add_address_man"
                android:text="先生"
                android:textColor="@color/black1" />

            <ImageView
                android:id="@+id/add_address_woman"
                android:layout_width="@dimen/d25"
                android:layout_height="@dimen/d25"
                android:layout_marginLeft="@dimen/d16"
                android:layout_toRightOf="@id/text2"
                android:padding="@dimen/d2"
                android:src="@drawable/select_no" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/d4"
                android:layout_toRightOf="@id/add_address_woman"
                android:text="女士"
                android:textColor="@color/black1" />
        </RelativeLayout>


        <View
            android:id="@+id/line2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/gray_line"
            android:layout_alignLeft="@id/et_add_shipping_address_name"
            android:layout_below="@id/rl_1"
            android:background="@color/color_e8e8e8" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/line2"
            android:background="@color/white">

            <TextView
                android:id="@+id/text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/d10"
                android:paddingLeft="@dimen/d10"
                android:paddingTop="@dimen/d10"
                android:text="手机："
                android:textColor="@color/black1"
                android:textSize="@dimen/TextSize_4" />

            <EditText
                android:id="@+id/et_add_shipping_address_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/text3"
                android:layout_marginLeft="@dimen/d10"
                android:layout_toRightOf="@id/text3"
                android:background="@null"
                android:hint="请填写收货人手机号码"
                android:paddingBottom="@dimen/d10"
                android:paddingTop="@dimen/d10"
                android:singleLine="true"
                android:textColor="@color/black1"
                android:textColorHint="@color/color_999999"
                android:textSize="@dimen/TextSize_15" />
        </RelativeLayout>

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/d10"
        android:text="收货地址"
        android:textSize="@dimen/TextSize_13" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <TextView
            android:id="@+id/text4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/d10"
            android:paddingLeft="@dimen/d10"
            android:paddingTop="@dimen/d10"
            android:text="收货地址："
            android:textColor="@color/black1"
            android:textSize="@dimen/TextSize_4" />

        <EditText
            android:id="@+id/et_add_shipping_address_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/text4"
            android:layout_toRightOf="@id/text4"
            android:background="@null"
            android:hint="请填写收货地址"
            android:padding="@dimen/d10"
            android:textColor="@color/black1"
            android:textColorHint="@color/color_999999"
            android:textSize="@dimen/TextSize_15" />

        <View
            android:id="@+id/line3"
            android:layout_width="match_parent"
            android:layout_height="@dimen/gray_line"
            android:layout_alignLeft="@id/text4"
            android:layout_below="@id/text4"
            android:background="@color/list_view_line" />

        <TextView
            android:id="@+id/text5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/line3"
            android:paddingBottom="@dimen/d10"
            android:paddingLeft="@dimen/d10"
            android:paddingTop="@dimen/d10"
            android:text="楼号-门牌号："
            android:textColor="@color/black1"
            android:textSize="@dimen/TextSize_4" />

        <EditText
            android:id="@+id/et_add_shipping_address_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/text5"
            android:layout_marginLeft="@dimen/d10"
            android:layout_toRightOf="@id/text5"
            android:background="@null"
            android:hint="例：1号楼1单元101室"
            android:padding="@dimen/d10"
            android:singleLine="true"
            android:textColor="@color/black1"
            android:textColorHint="@color/color_999999"
            android:textSize="@dimen/TextSize_15" />

    </RelativeLayout>


    <TextView
        android:id="@+id/save_add_address"
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:layout_marginLeft="@dimen/d10"
        android:layout_marginRight="@dimen/d10"
        android:layout_marginTop="@dimen/d30"
        android:background="@drawable/login_btn_1"
        android:gravity="center"
        android:text="保存"
        android:textColor="@color/White"
        android:textSize="@dimen/TextSize_4" />

</LinearLayout>
