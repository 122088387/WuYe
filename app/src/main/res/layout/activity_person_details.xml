<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/list_view_line"
              android:orientation="vertical">

    <include layout="@layout/include_title_bar"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="@color/colorPrimary"
        android:gravity="center_horizontal"
        android:padding="@dimen/d10">

        <com.github.siyamed.shapeimageview.CircularImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/person_details_image"
            android:layout_width="@dimen/d84"
            android:layout_height="@dimen/d84"
            android:layout_marginBottom="@dimen/d20"
            android:layout_marginTop="@dimen/d20"
            app:siBorderWidth="1dp"
            app:siBorderColor="@color/White"
            android:src="@drawable/qian_dao_tong_ji_head"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/d20"
            android:layout_toRightOf="@id/person_details_image">

            <TextView
                android:id="@+id/person_details_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="张贺"
                android:textColor="@color/White"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/person_details_position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/person_details_name"
                android:layout_marginTop="@dimen/d12"
                android:text="商务管理部门经理"
                android:textColor="@color/White"/>
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/White"
            android:padding="@dimen/d15">

            <TextView
                android:id="@+id/person_details_phone_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="手机号"/>

            <TextView
                android:id="@+id/person_details_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/person_details_phone_title"
                android:layout_marginTop="@dimen/d8"
                android:text="13964521523"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="@color/White"
            android:padding="@dimen/d15">

            <TextView
                android:id="@+id/person_details_department_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="部门"/>

            <TextView
                android:id="@+id/person_details_department"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/person_details_department_title"
                android:layout_marginTop="@dimen/d8"
                android:text="软件工程师"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
