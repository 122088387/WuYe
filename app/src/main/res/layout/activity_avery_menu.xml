<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tl="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <include layout="@layout/include_title_bar"/>

    <!--<com.wefika.calendar.CollapseCalendarView-->
    <!--android:id="@+id/avery_menu_calendar"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="wrap_content"/>-->

    <com.chaungying.avery_menu.view.MenuWeekView
        android:id="@+id/menu_week_view"
        android:layout_width="match_parent"
        android:paddingBottom="@dimen/d4"
        android:background="@color/White"
        android:layout_height="wrap_content"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/itemLineSize"
        android:background="@color/colorPrimary"/>
    <!--tl:tl_tab_space_equal="true"   平分-->

    <com.flyco.tablayout.SlidingTabLayout
        android:id="@+id/avery_menu_tablayout"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="#FFFFFF"
        tl:tl_indicator_color="@color/colorPrimary"
        tl:tl_indicator_height="1.5dp"
        tl:tl_tab_space_equal="true"
        tl:tl_textSelectColor="@color/colorPrimary"
        tl:tl_textUnselectColor="@color/list_view_line"
        tl:tl_textsize="@dimen/TextSize_6"
        tl:tl_underline_color="@color/tijiao_title"
        tl:tl_underline_height="@dimen/itemLineSize"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/avery_menu_vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


</LinearLayout>
