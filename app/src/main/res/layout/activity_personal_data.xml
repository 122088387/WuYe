<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/huise3"
    android:orientation="vertical">

    <include layout="@layout/include_title_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/d10"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_touxiang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="@dimen/d14">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="头像"
                android:textColor="@color/black1"
                android:textSize="@dimen/TextSize_4" />

            <ImageView
                android:id="@+id/touxiang"
                android:layout_width="@dimen/d45"
                android:layout_height="@dimen/d45"
                android:scaleType="fitXY"
                android:layout_alignParentRight="true"
                android:src="@drawable/person_touxiang" />

        </RelativeLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="@dimen/gray_line"
            android:layout_marginLeft="@dimen/d10"
            android:background="@color/huise3" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="@dimen/d14">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="姓名"
                android:textColor="@color/black1"
                android:textSize="@dimen/TextSize_4" />

            <TextView
                android:id="@+id/xingming"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/person_touxiang"
                android:text="123"
                android:textColor="@color/vice_title" />

        </RelativeLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="@dimen/gray_line"
            android:layout_marginLeft="@dimen/d10"
            android:background="@color/huise3" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="@dimen/d14">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="电话"
                android:textColor="@color/black1"
                android:textSize="@dimen/TextSize_4" />

            <TextView
                android:id="@+id/dianhua"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/person_touxiang"
                android:text="123"
                android:textColor="@color/vice_title" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/gray_line"
            android:layout_marginLeft="@dimen/d10"
            android:background="@color/huise3" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="@dimen/d14">

            <TextView
                android:id="@+id/gongsi_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="公司"
                android:textColor="@color/black1"
                android:textSize="@dimen/TextSize_4" />

            <TextView
                android:id="@+id/gongsi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/person_touxiang"
                android:text="123"
                android:textColor="@color/vice_title" />

        </RelativeLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="@dimen/itemLineSize0"
            android:layout_marginLeft="@dimen/d10"
            android:background="@color/huise3" />
    </LinearLayout>

</LinearLayout>