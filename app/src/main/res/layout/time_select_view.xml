<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_time_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:ems="4"
            android:paddingTop="@dimen/d12"
            android:paddingBottom="@dimen/d12"
            android:paddingLeft="@dimen/d10"
            android:paddingRight="@dimen/d10"
            android:text="时间"/>

        <TextView
            android:id="@+id/tv_show_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/text_edit_d"
            android:layout_marginRight="40dp"
            android:layout_toRightOf="@id/tv_time_select"
            android:padding="10dp"/>

        <ImageView
            android:id="@+id/time_right"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="10dp"
            android:src="@drawable/right_arrow"/>
    </RelativeLayout>

</LinearLayout>
