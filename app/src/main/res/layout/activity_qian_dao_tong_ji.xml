<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <include layout="@layout/include_title_bar"/>

    <com.flyco.tablayout.SlidingTabLayout
        xmlns:tl="http://schemas.android.com/apk/res-auto"
        android:id="@+id/tongjiList_tabLayout1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d40"
        android:background="@android:color/white"
        tl:tl_indicator_color="@color/colorPrimary"
        tl:tl_indicator_height="1.5dp"
        tl:tl_tab_padding="22dp"
        tl:tl_textSelectColor="?attr/colorPrimary"
        tl:tl_textUnselectColor="@android:color/darker_gray"
        tl:tl_textsize="@dimen/TextSize_6"
        tl:tl_underline_color="@android:color/darker_gray"
        tl:tl_underline_height="1dp"
        tl:tl_tab_space_equal="true"
        />

    <View
        android:id="@+id/tongjiList_fill"
        android:layout_width="match_parent"
        android:layout_height="@dimen/itemLineSize"
        android:background="@color/colorBack" />

    <android.support.v4.view.ViewPager
        android:id="@+id/tongjiList_viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>
