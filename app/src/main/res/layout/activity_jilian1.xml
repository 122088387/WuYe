<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/include_title_bar" />


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView
            android:id="@+id/lv_jilian"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@drawable/list_item_divider"
            android:dividerHeight="1dp" />

        <TextView
            android:id="@+id/tv_jilian"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/huise2" />

        <Button
            android:id="@+id/btn_ok"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/d12"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/login_btn"
            android:text="确定"
            android:textColor="@android:color/white"
            android:visibility="gone" />

        <com.chaungying.common.view.SideBar
            android:id="@+id/contact_hint"
            android:layout_width="20dp"
            android:visibility="gone"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_marginRight="2dp" />

        <TextView
            android:id="@+id/contact_dialog"
            android:layout_width="80.0dip"
            android:layout_height="80.0dip"
            android:layout_gravity="center"
            android:background="@drawable/contact_select_pinyin_bg"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="45sp"
            android:visibility="gone" />

    </FrameLayout>
</LinearLayout>
