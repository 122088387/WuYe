<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorBack"
    android:orientation="vertical">

    <TextView
        android:id="@+id/item_noticeList_topLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/d8"
        android:layout_marginLeft="@dimen/d16"
        android:layout_marginTop="@dimen/d8"
        android:text="未知"
        android:textColor="@color/gray"
        android:textSize="@dimen/TextSize_6"
        android:visibility="gone" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/White"
        android:foreground="?android:attr/selectableItemBackground"
        android:padding="16dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/d56">

            <TextView
                android:id="@+id/item_noticeList_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="公告获取失败"
                android:textColor="@color/black"
                android:textSize="@dimen/TextSize_4" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom">

                <TextView
                    android:id="@+id/item_noticeList_source"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="来源：未知"
                    android:textColor="@color/gray"
                    android:padding="@dimen/d2"
                    android:textSize="@dimen/TextSize_6" />

                <TextView
                    android:id="@+id/item_noticeList_comments"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:padding="@dimen/d2"
                    android:layout_alignParentRight="true"
                    android:text="未读量：4/5 >"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/TextSize_6"
                    android:visibility="visible" />
            </RelativeLayout>

        </FrameLayout>

    </FrameLayout>

</LinearLayout>